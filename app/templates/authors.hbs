<h1>Authors</h1>
<table class="table table-boredered table-striped">
	<thead>
		<tr>
			<th>Name
				<br><small class="small not-bold">(Click on name for editing)</small>
			</th>
			<th class="vtop">Books</th>
		</tr>
	</thead>
	<tbody>
		{{#each model as |author|}}
		<tr>
			{{#if author.isEditing}}
			<form {{action 'saveAuthor' author on='submit'}} class="form-inline">
				<div class="input-group">
					{{input value=author.name class="form-control"}}
					<div class="input-group-btn">
						<button type="submit" class="btn brn-success" disabled="{{author.isNotValid}}">Save</button>
						<button class="btn brn-danger" {{action 'cancelAuthorEdit' author}}>Cancel</button>
					</div>
				</div>
			</form>
			{{else}}
			<span {{action 'editAuthor' author}}>{{author.name}}</span>
			{{/if}}
			<td>
				<ul>{{#each author.books as |book|}}
					<li>{{book.title}}</li>
					{{/each}}
				</ul>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>