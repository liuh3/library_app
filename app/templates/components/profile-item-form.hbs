<div class="form-horizontal profile-item-form">
	<div class="form-group">
		<label class="col-sm-2 control-label">First Name</label>
		<div class="col-sm-10">
			{{input type="text" value=model.firstName class="form-control" placeholder="The firt name of the user"}}
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Last Name</label>
		<div class="col-sm-10">
			{{input type="text" value=model.lastName class="form-control" placeholder="The last name of the user"}}
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Email</label>
		<div class="col-sm-10">
			{{input type="text" value=model.email class="form-control" placeholder="The email of the user"}}
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Department</label>
		<div class="col-sm-10">
			{{input type="text" value=model.department class="form-control" placeholder="The department of the user"}}
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Phone Number</label>
		<div class="col-sm-10">
			{{input type="text" value=model.phoneNumber class="form-control" placeholder="The phone number of the user"}}
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Summary</label>
		<div class="col-sm-10">
			{{input type="text" value=model.summary class="form-control" placeholder="The summary of the user"}}
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-info" {{action 'buttonClicked' model}}>Save changes</button>
		</div>
	</div>
</div>