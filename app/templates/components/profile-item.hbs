<div class="panel panel-info profile-item">
	<div class="panel-heading">
		<h3 class="panel-title">{{item.firstName}} {{item.lastName}}</h3>
	</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="https://s-media-cache-ak0.pinimg.com/236x/93/fa/c0/93fac00692c54e9df0327528967f4741.jpg" class="img-circle img-responsive"> </div>

			<div class=" col-md-9 col-lg-9 "> 
				<table class="table table-user-information">
					<tbody>
						<tr>
							<td>Email: {{item.email}} </td>
						</tr>  
						<tr>
							<td>Department: {{item.department}}</td>
						</tr>
						<tr>
							<td>Phone Number: {{item.phoneNumber}}</td>
						</tr>
						<tr>
							<td>Summary: {{item.summary}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="panel-footer"> 
		{{yield}}
	</div>
</div>